package br.com.unifacisa.si2.damas.entity;


public class Tabuleiro {

	private static final int TAMANHO = 8;
	private static final int QNTD_PECAS_TABULEIRO = 24;
	
	
	public Tabuleiro() {
		
		int[][] aux = new int[TAMANHO][TAMANHO];
	
		for (int i = 0; i <= 3; i++) {
			for (int j = 0; j < aux[i].length; j++) {
				if(i == 0) {
					if(j % 2 == 0) {
						aux[i][j] = 1;
					}
				}
				
			}
			
		}
	}
	public static int getTamanho() {
		return TAMANHO;
	}
	public static int getQntdPecasTabuleiro() {
		return QNTD_PECAS_TABULEIRO;
	}
	
	
	
	
}
